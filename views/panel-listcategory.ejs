<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>AdminLTE 3 | Starter</title>

  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome Icons -->
  <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="dist/css/adminlte.min.css">
</head>
<body class="hold-transition sidebar-mini">
<div class="wrapper">

  <!-- Navbar -->
  <%- include('./inc/navbar') %>
  <!-- /.navbar -->

  <!-- Main Sidebar Container -->
  <%- include('./inc/sidebar') %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Kategoriler</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Panel</a></li>
              <li class="breadcrumb-item active">Kategori Listesi</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <div class="content">
      <div class="container-fluid" style="text-align: center;">
        <div class="row d-flex justify-content-center">
          <% for(let i=0; i<data.length; i++) { %>
        
            <div class="col-md-3">
            <div class="card card-success">
              <div class="card-header">
                <h3 class="card-title"><%= data[i].name %></h3>

                <!-- /.card-tools -->
              </div>
              <!-- /.card-header -->
              <form method="post" action="/func-category">
              <div class="card-body">
                <input type="hidden" name="id" value="<%= data[i].id %>">
                <input type="text" class="my-2" name="name" value="<%= data[i].name %>">
                <input type="text" name="image" value="<%= data[i].image %>">
              </div>
              <!-- /.card-body -->
              <div class="row" style="text-align: center;">
                <div class="col-md-6">
                  <button type="submit" class="btn btn-primary mx-1 my-1" name="func" value="update" style="width: 90%;">DÃ¼zenle</button>
                </div>
                <div class="col-md-6">
                  <button type="submit" class="btn btn-danger mx-1 my-1" name="func" value="delete" style="width: 90%;">Sil</button>
                </div>
              </form>
              </div>
            </div>
            <!-- /.card -->
          </div>
          
          <% } %>
        </div>
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  
  <!-- Main Footer -->
  <%- include('./inc/footer') %>
</div>
<!-- ./wrapper -->

<!-- REQUIRED SCRIPTS -->

<!-- jQuery -->
<script src="plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="dist/js/adminlte.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>
</html>
